<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:gravity="center"
        android:text="Menu"
        android:textSize="28dp"
        android:textStyle="bold"
        android:textColor="#000000"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="275dp"
            android:scaleType="fitStart"
            android:src="@drawable/caramel" />

        <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_margin="1dp"
         android:gravity="left"
         android:text="Caramel"
         android:textColor="@color/black" />

        <ImageView
            android:layout_width="430dp"
            android:layout_height="275dp"
            android:scaleType="fitStart"
            android:src="@drawable/carameljava" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="1dp"
          android:gravity="left"
          android:text="Caramel JavaChips"
          android:textColor="@color/black"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="275dp"
            android:scaleType="fitStart"
            android:src="@drawable/caramelcreamfrap" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:gravity="left"
            android:text="Caramel Cream Frappe"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="275dp"
            android:scaleType="fitStart"
            android:src="@drawable/latte" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:gravity="left"
            android:text="Latte"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:src="@drawable/vanillacreamfrappuccino"/>


    </LinearLayout>
</ScrollView>


